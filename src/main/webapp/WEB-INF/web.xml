    <filter>
        <filter-name>charactorEncoding</filter-name>
        <filter-class>
            org.springframework.web.filter.CharacterEncodingFilter
        </filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>charactorEncoding</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>


